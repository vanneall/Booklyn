<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings_page.SettingsPageFragment"
    android:orientation="vertical"
    android:theme="@style/Theme.Settings">

    <TextView
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/settings_title"
        android:textSize="@dimen/title_size"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:background="@color/primary_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/setting_background"
        android:padding="20dp">

        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings_simple_button"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                style="@style/HotelDataString" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_marginBottom="2dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right" />
        </FrameLayout>


        <Button
            android:id="@+id/privacy_and_policy_button"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SettingsButton"
            android:text="@string/privacy_policy"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/terms_and_conditions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SettingsButton"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/about_the_app_button"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SettingsButton"
            android:text="@string/about_the_app"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/support_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SettingsButton"
            android:text="@string/support"
            android:textColor="@color/black" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SettingsButton"
            android:text="@string/rate"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>