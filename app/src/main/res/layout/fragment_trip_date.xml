<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel_page.TripDateFragment"
    android:orientation="vertical"
    >

    <TextView
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Выберите дату"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:background="@color/primary_color"
        />

    <CalendarView
        android:id="@+id/fragment_trip_date_calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Calendar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/HotelDataString"
            android:text="@string/check_in"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView_check_in_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/HotelDataString"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/HotelDataString"
            android:text="@string/check_out"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView_check_out_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/HotelDataString"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/trip_date_apply_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Забронировать"
            android:layout_weight="1"
            android:textSize="@dimen/little_size"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/trip_date_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:textSize="@dimen/little_size"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>


</LinearLayout>