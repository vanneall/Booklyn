<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel_page.MainPageFragment"
    android:orientation="vertical"
    android:theme="@style/Theme.BooklynNoActionBar">

    <ScrollView
        android:id="@+id/main_page_scrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/main_page_bottom_view"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/main_page_imageView_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    />

                <ImageView
                    android:id="@+id/main_page_imageView_back"
                    android:layout_marginTop="58dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sign_back" />

                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/main_page_textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hotel_title"
                    android:textSize="@dimen/title_size"
                    android:textColor="@color/white"
                    android:gravity="left|top"
                    android:textStyle="bold"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:shadowColor="@color/black"/>
            </FrameLayout>


            <RadioGroup
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/radio_group_category_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radio_button_feedback"
                    style="@style/InteractText"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:background="@drawable/interactive_reactangle_left"
                    android:button="@android:color/transparent"
                    android:text="@string/feedbacks"
                    android:gravity="center"
                    />

                <RadioButton
                    android:id="@+id/radio_button_review"
                    style="@style/InteractText"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:background="@drawable/interactive_reactangle_middle"
                    android:button="@android:color/transparent"
                    android:text="@string/review"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/radio_button_photos"
                    style="@style/InteractText"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:background="@drawable/interactive_reactangle_right"
                    android:button="@android:color/transparent"
                    android:text="@string/photos_hotel"
                    android:gravity="center"/>

            </RadioGroup>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line"/>

                <FrameLayout
                    android:id="@+id/frame_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_above="@+id/main_page_bottom_view"
        android:layout_marginBottom="1dp"/>

    <LinearLayout
        android:id="@+id/main_page_bottom_view"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/main_page_textView_price_for_night"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            style="@style/CategoryTitle"
            android:textColor="@color/black"
            android:text=""
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/white"/>

        <Button
            android:id="@+id/main_page_switch_to_orderActivity"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/book_button"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>