<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel_page.MainPageFragment"
    android:paddingTop="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_page_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hotel_title"
            style="@style/Title"
            android:gravity="center_horizontal"/>

        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/main_page_imageView_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                />
        </FrameLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:background="@drawable/interactive_reactengle_left"
                android:textOff="@string/feedbacks"
                android:textOn="@string/feedbacks"
                style="@style/InteractText"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/interactive_reactengle_middle"
                android:textOff="@string/review"
                android:textOn="@string/review"
                style="@style/InteractText"/>

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/interactive_reactengle_right"
                android:textOff="@string/photos_hotel"
                android:textOn="@string/photos_hotel"
                style="@style/InteractText"/>

        </LinearLayout>

        <ImageView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>

        <TextView
            android:id="@+id/main_page_textView_category_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/review"
            style="@style/CategoryTitle"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/main_page_textView_info"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="180dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/main_page_textView_category_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/services"
            style="@style/CategoryTitle"
            android:background="#E0E8ED"
            android:gravity="center_horizontal"/>

        <GridView
            android:background="#E0E8ED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/geolocation_icon"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/InteractText"
                    android:text="@string/place"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="4-я сокольническая"
                    style="@style/HotelDataString"/>

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone_number_icon"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/InteractText"
                    android:text="@string/number"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="89150660353"
                    style="@style/HotelDataString"
                    android:autoLink="phone"/>

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_in_icon"
                        />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/InteractText"
                        android:text="@string/check_in" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/check_out_icon"
                        />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/InteractText"
                        android:text="@string/check_out" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                style="@style/CategoryTitle"
                android:textColor="@color/black"
                android:text="2500 за ночь"
                android:gravity="center"
                android:layout_weight="1"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/book_button"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>