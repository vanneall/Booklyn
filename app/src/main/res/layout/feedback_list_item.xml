<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RatingBar
        android:id="@+id/feedback_list_item_ratingBar_rate"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feedback_list_item_textView_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.4"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@color/primary_color"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/feedback_list_item_textView_rating_estimantion"
            android:layout_marginLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Отзыв"
            android:textColor="@color/black"
            android:textSize="@dimen/simple_size"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-black"/>

        <Button
            android:id="@+id/feedback_list_item_button_delete_feedback"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="@string/remove"
            android:backgroundTint="@color/red"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/little_size"/>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/feedback_list_item_textView_commentary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:text="Отзыв"
        android:textColor="@color/black"
        android:textSize="@dimen/simple_size" />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/feedback_list_item_textView_commentary_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:text="дата"
        android:textSize="@dimen/little_size"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>