<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_hotel_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel_page.HotelSelectionFragment"
    android:orientation="vertical">

    <TextView
        android:paddingTop="52dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/activity_hotel_selection_title"
        android:textSize="@dimen/title_size"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:background="@color/primary_color"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/main_editText_search_hotel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:ems="10"
        android:inputType="text"
        android:maxLength="25"
        android:hint="Поиск"
        android:background="@drawable/search_bar_rectangle"
        android:drawableLeft="@drawable/search_icon"
        android:drawablePadding="5dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/main_textView_filters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:textSize="@dimen/simple_size"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/main_textView_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sort"
            android:textSize="@dimen/simple_size"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="5dp"
        android:id="@+id/main_container_for_sort_and_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/setting_background"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        android:layout_gravity="bottom"/>

    <TextView
        android:id="@+id/main_textView_add_new_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="+ Добавить отель"
        android:textColor="@color/faded_green"
        android:textSize="17dp" />

    <ListView
        android:id="@+id/main_listView_hotels"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>