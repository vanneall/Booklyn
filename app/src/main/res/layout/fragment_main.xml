<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_hotel_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotel_page.HotelSelectionFragment"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_hotel_selection_title"
        android:textSize="@dimen/title_size"
        android:textColor="@color/text_color"/>

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:textSize="@dimen/simple_size"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sort"
            android:textSize="@dimen/simple_size"
            android:gravity="right"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listView_main_hotels"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>