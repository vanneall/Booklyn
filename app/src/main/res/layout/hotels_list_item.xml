<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/hotel_list_item_imageView_picture"
        android:layout_width="130dp"
        android:layout_height="245dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/hotel_list_item_textView_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="name"
            android:textSize="@dimen/simple_size"
            android:gravity="top"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            />

        <RatingBar
            android:id="@+id/hote_list_item_ratingBar"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hotel_list_item_textView_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_color"
                android:padding="3dp"
                android:text="rate"
                android:textColor="@color/white"
                android:textSize="@dimen/simple_size" />

            <TextView
                android:id="@+id/hotel_list_item_textView_rating_estimation"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="очень хорошо"
                android:textSize="14dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/hotel_list_item_textView_number_of_feedbacks"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="сколько то отзывов"
                android:textSize="13dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/hotels_list_item_textView_location"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Находится тута"
            android:drawablePadding="5dp"
            android:textSize="12dp"
            android:drawableLeft="@drawable/geolocation_icon"
            />

        <TextView
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hotel_item_price_start"
            android:textSize="@dimen/simple_size"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/main_page_textView_min_price"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="price"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ налоги и сборы (10%)"
            android:textSize="13dp"/>

        <TextView

            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Без предоплаты"
            android:textSize="13dp"/>

        <Button
            android:id="@+id/hotel_list_item_button_selection_hotel"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/hotel_item_transef"/>
        <Button
            android:id="@+id/hotel_list_item_button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/remove"
            android:backgroundTint="@color/red"/>
    </LinearLayout>

</LinearLayout>