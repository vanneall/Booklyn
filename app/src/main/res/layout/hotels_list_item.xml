<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView_hotel_list_item_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/textView_hotel_list_item_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="name"
            android:textSize="@dimen/simple_size"
            android:gravity="bottom"/>

        <TextView
            android:id="@+id/textView_hotel_list_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:text="rate"
            android:textSize="@dimen/simple_size" />

        <TextView
            android:id="@+id/textView_hotel_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="price"
            android:textSize="@dimen/simple_size" />
    </LinearLayout>

    <Button
        android:id="@+id/button_selection_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chose"
        android:textSize="@dimen/little_size"
        android:layout_gravity="center_vertical"
        />


</LinearLayout>