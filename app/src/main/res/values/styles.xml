<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/simple_size</item>
        <item name="textAllCaps">true</item>
    </style>
    
    <style name="InteractText">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/simple_size</item>
    </style>

    <style name="HotelDataString">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/simple_size</item>
    </style>

    <style name="CardEditText">
        <item name="android:textColorHint">@color/card_text_color</item>
        <item name="android:textSize">15dp</item>
        <item name="backgroundTint">@color/card_text_color</item>
        <item name="android:textColor">@color/card_text_color</item>
    </style>

    <style name="SettingsButton">
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/settings_button_background</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableRight">@drawable/settings_arrow</item>
    </style>

</resources>