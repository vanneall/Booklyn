<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="Title" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CategoryTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/simple_size</item>
        <item name="textAllCaps">true</item>
    </style>
    
    <style name="InteractText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/simple_size</item>
    </style>

    <style name="HotelDataString" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/simple_size</item>
    </style>

</resources>